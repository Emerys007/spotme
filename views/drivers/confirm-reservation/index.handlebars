<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center">Finalize Reservation</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <form id="calendar" class="text-center" action="/drivers/reserve" method="POST">
        <div class="form-group col-xs-4 col-xs-offset-1">
            <label>Start Date</label>
            <input type="text" name="startDate" class="date start form-control" /><br />
            <label>Start Time</label>
            <input type="text" name="startTime" class="time start form-control" />
        </div>
        <div class="form-group col-xs-4 col-xs-offset-1">
          <label>End Date</label>
          <input type="text" name="endDate" class="date end form-control" /><br />
          <label>End Time</label>
          <input type="text" name="endTime" class="time end form-control" />
        </div>
        <div class="col-xs-6 col-xs-offset-3">
          <input type="hidden" name="spaceId" class="form-control" value="{{space.id}}" >
          <input type="hidden" name="ownerId" class="form-control" value="{{space.userId}}" >
          <label>Address</label>
          <input type="text" name="address" class="form-control" value="{{space.address1}} {{space.address2}} {{space.city}}, {{space.state}} {{space.zip}}" readonly>
          <label>Price (USD per half hour)</label>
          <input type="number" min="0" step="0.01" name="pricePerHalfHour" class="form-control" value="{{space.pricePerHalfHour}}" readonly>
          <label>Special Instructions</label>
          <input type="text" name="instructions" class="form-control" value="{{space.instructions}}" readonly>
        </div>
        <div class="form-group col-xs-4 col-xs-offset-4">
          <button class="btn btn-lg btn-success btn-block btn-submit" type="submit">Reserve</button>
        </div>
      </form>
    </div>
    <script>
        // initialize input widgets first
        $('#calendar .time').timepicker({
            'showDuration': true,
            'timeFormat': 'H:i'
        });

        $('#calendar .date').datepicker({
            'format': 'mm/dd/yyyy',
            'autoclose': true
        });

        // initialize datepair
        var cal = document.getElementById('calendar');
        var datepair = new Datepair(cal);
    </script>
  </div>
</div>
