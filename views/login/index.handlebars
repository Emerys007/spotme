<div class="container">
  <div class="row">
  {{#each error}}
    <div class="alert alert-danger">{{this}}</div>
  {{/each}}
    <form class="form-signin" name="login" action="/login" method="post">
      <h2 class="form-signin-heading">Log In</h2>
      <label for="email" class="sr-only">Email address</label>
      <input type="email" name="email" class="form-control" placeholder="Email address" required data-validation-required-message="Please enter your email address." autofocus>
      <label for="password" class="sr-only">Password</label>
      <input type="password" name="password" class="form-control" placeholder="Password" required data-validation-required-message="Please enter your password.">
      <button class="btn btn-lg btn-primary btn-block btn-submit" type="submit">Log In</button>
    </form>
  </div>
</div>
