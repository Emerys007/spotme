<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center">My Listings</h1>
    </div>
  </div>
</div>

{{#each space}}
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-lg-8">
      <h4>Listing ID: {{this.id}}</h4>
      <a href="/owners/listings/{{this.id}}/edit">
        <h3>{{this.address1}} {{this.address2}} {{this.city}}, {{this.state}} {{this.zip}}</h3>
      </a>
      <h6>Updated on: {{this.updatedAt}}</h6>
    </div>
    <div class="col-xs-6 col-lg-4 text-right">
      <img src="https://maps.googleapis.com/maps/api/streetview?&size=200x200&location={{this.address1}},%20{{this.city}},%20{{this.state}},%20{{this.zip}}&key=" />
    </div>
  </div>
  <hr>
</div>
{{/each}}

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <form action="owners/listings/new" method="get">
        <div class="form-group col-xs-4 col-xs-offset-4">
          <button class="btn btn-lg btn-primary btn-block btn-submit" type="submit">Add Listing</button>
        </div>
      </form>
    </div>
  </div>
</div>
